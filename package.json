{
  "name": "fastdownloader",
  "version": "0.1.7",
  "description": "A fast video and audio downloader for YouTube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build_win": "electron-builder build --win --publish never",
    "build_unix": "electron-builder build --linux --publish never",
    "deploy": "electron-builder build --win --linux --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BERNARDO31P/fastDownloader.git"
  },
  "keywords": [
    "downloader",
    "youtube",
    "fast",
    "audio",
    "video"
  ],
  "author": "Bernardo de Oliveira <bernardo@bernardo.fm>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "~22.10.5"
  },
  "dependencies": {
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "ytpl": "^2.2.3"
  },
  "build": {
    "productName": "Fast Downloader",
    "win": {
      "icon": "resources/256x256.png",
      "target": "nsis",
      "extraResources": [
        {
          "from": "resources/ffmpeg.exe",
          "to": "ffmpeg.exe"
        },
        {
          "from": "resources/yt-dlp.exe",
          "to": "yt-dlp.exe"
        }
      ]
    },
    "nsis": {
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    },
    "linux": {
      "icon": "resources/256x256.png",
      "category": "Utility",
      "target": [
        "deb",
        "AppImage",
        "rpm",
        "tar.gz"
      ],
      "extraResources": [
        {
          "from": "resources/ffmpeg",
          "to": "ffmpeg"
        },
        {
          "from": "resources/yt-dlp",
          "to": "yt-dlp"
        }
      ]
    }
  }
}
