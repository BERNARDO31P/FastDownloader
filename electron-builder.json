{
  "appId": "fm.bernardo.fastDownloader",
  "productName": "Fast Downloader",
  "asar": true,
  "directories": {
    "buildResources": "resources/",
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "resources/bin/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "resources/bin/yt-dlp.exe",
        "to": "yt-dlp.exe"
      },
      {
        "from": "resources/icons/256x256.png",
        "to": "icons/256x256.png"
      }
    ]
  },
  "nsis": {
    "allowElevation": false,
    "allowToChangeInstallationDirectory": true,
    "oneClick": false,
    "perMachine": true
  },
  "linux": {
    "category": "Utility",
    "target": [
      "deb",
      "AppImage",
      "rpm",
      "tar.gz",
      "pacman"
    ],
    "extraResources": [
      {
        "from": "resources/bin/ffmpeg",
        "to": "ffmpeg"
      },
      {
        "from": "resources/bin/yt-dlp",
        "to": "yt-dlp"
      },
      {
        "from": "resources/icons/256x256.png",
        "to": "icons/256x256.png"
      }
    ]
  }
}
